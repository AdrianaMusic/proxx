<!doctype html>
<meta charset="utf-8">
<% for(const file of fs.readdirSync('dist').filter(f => f.endsWith('.js'))) { %>
  <link rel="preload" href="<%=file;%>" as="script">
<% } %>
<style>
  :root {
    --size: 20px;
  }
  label {
    display: block;
  }
  table {
    border-spacing: 0;
    border-collapse: collapse;
  }
  tr, td, td > * {
    height: var(--size);
    margin: 0;
    border: 0;
    padding: 0;
  }
  td, td > * {
    width: var(--size);
    line-height: 0;
  }
  td {
    border: 1px solid rgba(0, 0, 0, 0.4);
  }
  td > * {
    background-color: #bbb;
    width: var(--size);
    height: var(--size);
    text-align: center;
    /* line-height: var(--size); */
    font-size: var(--size);
    overflow: hidden;
  }
  td > *.empty {
    background-color: transparent;
  }
  <% for(let i = 1; i <= 8; i++) {%>
    td > *.touching-<%=i;%> {
      color: hsl(<%=240 - i/8*240;%>, 100%, 50%);
    }
  <% } %>
</style>
<script src="<%= hashmanifest["src/bootstrap.ts"]; %>" defer></script>
